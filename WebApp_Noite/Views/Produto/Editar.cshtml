@model WebApp_Noite.Models.ProdutoModel
<div class="row">
    <div class="col-4">
        coluna da esquerda
    </div>
    <div class="col-4">

        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Produto</h2>
            </div>
            <div class="card-body">
                <form action="/Produto/SalvarDados" method="post">

                    <label>Id</label>
                    <input name="Id" type="text" value="@Model.Id" readonly class="form-control" />

                    <label>Nome</label>
                    <input type="text" value="@Model.Nome" name="Nome" class="form-control" />
                    <br />

                    <label>Quantidade em Estoque</label>
                    <input type="number" value="@Model.QtdEstoque" name="QtdEstoque" class="form-control" />
                    <br />

                    <button type="submit" class="btn btn-info">
                        Salvar Produto
                    </button>

                </form>
            </div>
        </div>

    </div>
    <div class="col-4">
        coluna da direita
    </div>
</div>